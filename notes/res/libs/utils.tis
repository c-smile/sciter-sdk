
// true if two dates are of the same day of year
function sameDay(date1,date2) {
  return 
     date1.day == date2.day
  && date1.month == date2.month
  && date1.year == date2.year;
}

function sameDateTime(date1,date2) {
  return 
     date1.day == date2.day
  && date1.month == date2.month
  && date1.year == date2.year;
}